<?xml version="1.0"?>
<config>
    <modules>
        <Gracious_Pubsub>
            <version>0.1.0</version>
        </Gracious_Pubsub>
    </modules>
    <global>
        <helpers>
            <pubsub>
                <class>Gracious_Pubsub_Helper</class>
            </pubsub>
        </helpers>
        <events>
            <sales_order_place_after>
                <observers>
                    <gracious_pubsub_observers>
                        <class>Gracious_Pubsub_Model_Observer</class>
                        <method>salesOrderPlaceAfter</method>
                    </gracious_pubsub_observers>
                </observers>
            </sales_order_place_after>
        </events>
        <models>
            <pubsub>
                <class>Gracious_Pubsub_Model</class>
                <resourceModel>pubsub_mysql4</resourceModel>
            </pubsub>
            <pubsub_mysql4>
                <class>Gracious_Pubsub_Model_Mysql4</class>
            </pubsub_mysql4>
        </models>
        <resources>
            <pubsub_setup>
                <setup>
                    <module>Gracious_Pubsub</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </pubsub_setup>
            <pubsub_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </pubsub_write>
            <pubsub_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </pubsub_read>
        </resources>
    </global>
    <default>
        <defaults>
            <orders_topic>orders</orders_topic>
        </defaults>
    </default>
    <crontab>
        <jobs>
            <pubsub_process_orders>
                <schedule>
                    <cron_expr>*/10 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>pubsub/cron::processOrders</model>
                </run>
            </pubsub_process_orders>
        </jobs>
    </crontab>
</config> 